# Application Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_DEBUG=True

# Database Configuration
# For SQLite (development only)
DATABASE_URL=sqlite:///inventory.db

# For PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# For MySQL (production alternative)
# DATABASE_URL=mysql://username:password@host:port/database_name

# For cloud services examples:
# AWS RDS: postgresql://username:password@your-rds-endpoint:5432/inventory_db
# Google Cloud SQL: postgresql://username:password@/database_name?host=/cloudsql/project:region:instance
# DigitalOcean: postgresql://username:password@host:port/database_name?sslmode=require

# Admin Account (will be generated if not set)
ADMIN_PASSWORD=your-secure-admin-password-here

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password